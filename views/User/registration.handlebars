

            <header class="page-header">        
                
                <div class="header-inner">
                    <h1>Welcome To Chat<span class="fa fa-link loc"></span>Loc</h1>
                </div>
                            
            </header>
                    
            <main>
                
                <div class="main-wrapper">
                
                     <section class="register-now">

                    <section class="connect">
                        <h1 class="header">Sign Up</h1>
                        <p>Connect with People Close By</p>
                        
                        <div class="toronto-map">
                            <img src="/images/toronto-map.png" alt="toronto map">
                        </div>
                        
                    </section>

                    <section class="registration">

                        <form action="/user/registration" method="POST" class="register">
                            <div class="form-group">
                                <label for="name">Username</label>
                                <input type="text" name="name" id="name" class="register-input">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" class="register-input">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" class="register-input">
                            </div>
                            <div class="form-group">
                                <label for="origin">Country of Origin</label>
                                <input type="text" id="origin" name="origin" class="register-input">
                            </div>
                            <div class="form-group register-switch">
                                <input type="radio" name="sex" id="female" class="register-switch-input" checked>
                                <label for="female" class="register-switch-label">Female</label>

                                <input type="radio" name="sex" id="male" class="register-switch-input">
                                <label for="male" class="register-switch-label">Male</label>
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit-btn" id="submit-btn" value="Get Started" class="register-button"> 
                            </div>

                        </form>

                        <p class="have-account">Already have an account? <a href="login">Sign in instead</a></p>

                    </section>
                        
                </section>
                
                </div>
        
            </main>
            
            